
<div class="container-fluid">
    <!-- <div class="row content"> -->
        <div style="height:100%">
        <div class="sidenav" >
          <h4><%= quiz.name %></h4>
          <% for( var i = 0 ; i < quiz.addQuestions.length ; i++ ) { %>
            <a class = "shortCut" number = "<%=i %>" href = "#"> Question <%=i+1%></a>
          <% } %>
        </div>
      </div>

      <div class="col-sm-9 main">
        <div id="quizTimer" value="<%=quiz.duration%>" style="text-align: right; padding-top: 10px; padding-right: 10px"></div>
        <hr>
        <div>
          <form id="quizForm" action="/attempt/quiz/<%=quiz._id%>" method="POST">
            <div class="divs">
                <% for(var i=0;i < quiz.addQuestions.length;i++) { %>
                <div class="ques wrapword">
                  <div style="margin-bottom: 30px"><b>Question <%=i+1%></b></div>
                  <span><%- quiz.addQuestions[i].question %></span>
                  <input type="radio" name="<%= 'a' + i.toString(10) %>" value="A" class="ops" id="ops" style="margin-right: 10px">
                  <span><%- quiz.addQuestions[i].option1 %></span><br>
                  <input type="radio" name="<%= 'a' + i.toString(10) %>" value="B" class="ops" id="ops" style="margin-right: 10px">
                  <span><%- quiz.addQuestions[i].option2 %></span><br>
                  <input type="radio" name="<%= 'a' + i.toString(10) %>" value="C" class="ops" id="ops" style="margin-right: 10px">
                  <span><%- quiz.addQuestions[i].option3 %></span><br>
                  <input type="radio" name="<%= 'a' + i.toString(10) %>" value="D" class="ops" id="ops" style="margin-right: 10px">
                  <span><%- quiz.addQuestions[i].option4 %></span><br>
                </div>
                <% } %>
              </div>
          </form>
            <div id="prev" class="btn btn-success btn-round">prev</div>
            <div id="next" class="btn btn-success btn-round">next</div>
            <div id="clearResponse" class="btn btn-secondary btn-round">Clear Response</div>
            <button id="submitquiz" form="quizForm" class="btn btn-primary btn-round pull-right">submit quiz</button>
        </div>
        
        <hr>
        
  
      </div>
